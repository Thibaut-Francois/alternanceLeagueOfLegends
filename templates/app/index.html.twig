{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<main>
    <section class="header">
        <h1>League Of Legends Synergy</h1>
    </section>

    <section class="select">
        {% for lane in lanes %}
        <div class="card">
            <section>
                <div class="slide">
                    <button><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M13 7.828V20h-2V7.828l-5.364 5.364l-1.414-1.414L12 4l7.778 7.778l-1.414 1.414L13 7.828Z"/></svg></button>
                </div>

                <div class="image">
                    <img src="">
                </div>

                <div class="slide">
                    <button><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="m13 16.172l5.364-5.364l1.414 1.414L12 20l-7.778-7.778l1.414-1.414L11 16.172V4h2v12.172Z"/></svg></button>
                </div>

                <div class="names">
                    <select id='test'>
                        {% for champion in champions %}
                            <option value="{{ champion.nom }}">{{ champion.nom }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    <h2>{{ lane.nom }}</h2>
                </div>
            </section>
        </div>
        {% endfor %}
<!--
        <div class="card"></div>

        <div class="card"></div>

        <div class="card"></div>

        <div class="card"></div>
--!>
    </section>

    <section class="btn">
        <div>
            <button>Calculer la synergie</button>
        </div>
    </section>
</main>
{% endblock %}
